<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Buttons -->
  <style name="Widget.SpaceApp.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:insetTop">8dp</item>
    <item name="android:insetBottom">8dp</item>
    <item name="cornerRadius">@dimen/shape_theming_radius</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:maxHeight">@dimen/button_height</item>
    <item name="android:minHeight">@dimen/button_height</item>
    <item name="android:textAppearance">?attr/textAppearanceButton</item>
    <item name="android:textColor">@color/material_button_text_color</item>
    <item name="backgroundTint">@color/material_button_background_tint</item>
    <item name="rippleColor">?attr/colorOnPrimary</item>
    <item name="shapeAppearanceOverlay">?attr/shapeAppearanceSmallComponent</item>
  </style>


  <style name="Widget.SpaceApp.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:maxHeight">@dimen/button_height</item>
    <item name="android:minHeight">@dimen/button_height</item>
    <item name="android:textAppearance">?attr/textAppearanceButton</item>
    <item name="android:textColor">?attr/colorSecondary</item>
    <item name="rippleColor">?attr/colorSecondaryRipple</item>
    <item name="shapeAppearanceOverlay">?attr/shapeAppearanceSmallComponent</item>
  </style>

  <style name="Widget.SpaceApp.Button.Group.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
    <item name="android:textAppearance">@style/TextAppearance.SpaceApp.Button</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">16dp</item>
    <item name="android:insetTop">8dp</item>
    <item name="android:insetBottom">8dp</item>
    <item name="android:maxHeight">@dimen/button_height</item>
    <item name="android:minHeight">@dimen/button_height</item>
    <item name="strokeWidth">2dp</item>
    <item name="strokeColor">?attr/colorOutlinedButtonGroup</item>
    <item name="cornerRadius">@dimen/shape_theming_radius</item>
    <item name="elevation">0dp</item>
  </style>

  <style name="Widget.SpaceApp.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textAppearance">@style/TextAppearance.SpaceApp.Button</item>
    <item name="android:textColor">?attr/colorSecondary</item>
    <item name="rippleColor">?attr/colorSecondaryRipple</item>
    <item name="cornerRadius">@dimen/shape_theming_radius</item>
  </style>

  <style name="MaterialAlertDialog.SpaceApp.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
    <item name="android:textAppearance">@style/TextAppearance.SpaceApp.Headline6</item>
  </style>

  <style name="MaterialAlertDialog.SpaceApp.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="android:textAppearance">@style/TextAppearance.SpaceApp.Body2</item>
  </style>

  <style name="CollapsingToolbar" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
    <item name="android:textAppearance">@style/TextAppearance.SpaceApp.Headline6</item>
  </style>
</resources>
