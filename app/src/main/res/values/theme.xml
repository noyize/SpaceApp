    <item name="textAppearanceBody1">@style/TextAppearance.SpaceApp.Body1</item>
    <item name="textAppearanceBody2">@style/TextAppearance.SpaceApp.Body2</item>
    <item name="textAppearanceButton">@style/TextAppearance.SpaceApp.Button</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.SpaceApp.Subtitle1</item>
    <item name="textAppearanceSubtitle2">@style/TextAppearance.SpaceApp.Subtitle2</item>
    <item name="textAppearanceHeadline3">@style/TextAppearance.SpaceApp.Headline3</item>
    <item name="textAppearanceHeadline4">@style/TextAppearance.SpaceApp.Headline4</item>
    <item name="textAppearanceHeadline5">@style/TextAppearance.SpaceApp.Headline5</item>
    <item name="textAppearanceHeadline6">@style/TextAppearance.SpaceApp.Headline6</item>

    <item name="android:statusBarColor">@color/colorOnPrimary</item>
    <item name="android:navigationBarColor">@color/colorOnPrimary</item>



  </style>

